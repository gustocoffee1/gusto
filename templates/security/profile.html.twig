{% extends 'base.html.twig' %}

{% block metadescription %}<meta name="description" content="Modifiez vos informations de compte.">{% endblock %}

{% block title %} Modifier mon profil{% endblock %}

{% block body %}
<section class="py-6">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier mon profil</li>
        </ol>
    </nav>
    <main class="mt-2 mb-4 ">
        <div class="container">
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <h1>Modifier mon profil</h1>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-connexion">Enregistrer les modifications</button>
                    {{ form_end(form) }}
                    <br>
                    <a href="{{ path('account_delete', {'id': app.user.id }) }}" class="btn btn-delete" onclick="return confirm(`Etes vous sur de vouloir supprimer votre compte ?`)">Supprimer mon compte</a>
                </div>
            </div>
            </div>
        </div>
    </main>
</section>
{% endblock %}
