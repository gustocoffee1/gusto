{% extends 'base.html.twig' %}

{% block title %}Se connecter à votre compte{% endblock %}

{% block metadescription %}<meta name="description" content="Connectez-vous à votre compte. Un seul endroit pour tout gérer.">{% endblock %}

{% block body %}
<section class="py-6">
    <main class="mt-2 mb-5 pt-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">&nbsp;</div>
                    <div class="col-md-6">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <h1>Connexion</h1>
                        <form action="{{ path('security_login') }}" method="post">
                            <div class="form-group">
                                <label class="required">Adresse mail *</label>
                                <input placeholder="Adresse mail..." required name="_username" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="required">Mot de passe *</label>
                                <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-connexion">Se connecter </button>
                            </div>
                            <p>Pas encore de compte ? <a href="{{ path('security_registration') }}">Ouvrez un compte</a></p>
                        </form>
                    </div>
                </div>
            </div>
    </main>
</section>
{% endblock %}
